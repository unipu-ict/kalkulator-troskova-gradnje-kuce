<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.PrizemljeFragment">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/editText13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#6200EE"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="PRIZEMLJE"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editText14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText13"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Prizemlje je zidano ciglom 25x19x19, visina 3m, uključivo stropna betonska ploča d=16cm. Upišite samo bruto površinu zatvorenog prostora, bez terasa i balkona."
            android:textSize="15sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/PrizemljeKvadratura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText14"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="18dp"
            android:layout_toStartOf="@+id/PrizemljePBSw"
            android:ems="10"
            android:hint="Unesite kvadraturu"
            android:inputType="number"
            android:textColorHint="#000000" />

        <Switch
            android:id="@+id/PrizemljePBSw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/PrizemljeKvadratura"
            android:checked="false"
            android:switchPadding="5dp"
            android:text="Porobeton (siporex)" />

        <SeekBar
            android:id="@+id/PrizemljePZidScroll"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText16"
            android:max="50"
            android:progress="10" />

        <TextView
            android:id="@+id/editText16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText17"
            android:layout_below="@+id/PrizemljeKvadratura"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Pregradni Zidovi (m)"
            android:textAlignment="center" />

        <SeekBar
            android:id="@+id/PrizemljeDimnjakScroll"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/PrizemljePZidScroll"
            android:layout_marginTop="75dp"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/editText17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/PrizemljeDimnjakScroll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Dimnjak (kom)"
            android:textAlignment="center" />

    </RelativeLayout>
</LinearLayout>
</FrameLayout>